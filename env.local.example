# ========================================
# CONFIGURACIÓN LOCAL - 4GMovil
# Entorno: Desarrollo Local
# ========================================

# Configuración de la aplicación
APP_NAME="4GMovil"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Configuración de mantenimiento
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Configuración de seguridad
BCRYPT_ROUNDS=12

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# BASE DE DATOS
# ========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=4gmovil
DB_USERNAME=root
DB_PASSWORD=

# ========================================
# SESIONES
# ========================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================================
# CACHÉ Y REDIS
# ========================================
# Para desarrollo local usar file cache
CACHE_DRIVER=file
CACHE_PREFIX=4gmovil_cache_

# Redis (opcional para desarrollo local)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ========================================
# COLA DE TRABAJOS
# ========================================
QUEUE_CONNECTION=database

# ========================================
# BROADCASTING
# ========================================
BROADCAST_CONNECTION=log

# ========================================
# ALMACENAMIENTO
# ========================================
FILESYSTEM_DISK=local

# ========================================
# CORREO ELECTRÓNICO
# ========================================

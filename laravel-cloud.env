# ========================================
# CONFIGURACIÓN PRODUCCIÓN - 4GMovil
# Entorno: Laravel Cloud
# ========================================

# Configuración de la aplicación
APP_NAME="4GMovil"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://4gmovil.laravel-cloud.com

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Configuración de mantenimiento
APP_MAINTENANCE_DRIVER=database
APP_MAINTENANCE_STORE=database

# Configuración de seguridad
BCRYPT_ROUNDS=12
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error


# ========================================
# SESIONES
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================================
# CACHÉ Y REDIS (PRODUCCIÓN)
# ========================================
# Usar Redis para caché en producción
CACHE_DRIVER=redis
CACHE_PREFIX=4gmovil_cache_

# Redis configurado para Laravel Cloud
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLIENT=predis
REDIS_PREFIX=4gmovil_
REDIS_TIMEOUT=5
REDIS_READ_TIMEOUT=60
REDIS_PERSISTENT=true

# ========================================
# COLA DE TRABAJOS
# ========================================
QUEUE_CONNECTION=redis

# ========================================
# BROADCASTING
# ========================================
BROADCAST_CONNECTION=redis

# ========================================
# ALMACENAMIENTO
# ========================================
FILESYSTEM_DISK=local

# ========================================
# CORREO ELECTRÓNICO (PRODUCCIÓN)
# ========================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@4gmovil.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@4gmovil.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# STRIPE (PAGOS - PRODUCCIÓN)
# ========================================
# Claves de producción (configurar en Laravel Cloud)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ========================================
# GOOGLE OAUTH (PRODUCCIÓN)
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://4gmovil.laravel-cloud.com/auth/callback/google

# ========================================
# CONFIGURACIÓN DE INVENTARIO
# ========================================
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_ALERT_EMAIL=admin@4gmovil.com

# ========================================
# AWS (PRODUCCIÓN)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# VITE (FRONTEND)
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# CONFIGURACIÓN DE CACHÉ AVANZADA
# ========================================
# TTL del caché en segundos (1 hora)
CACHE_TTL=3600

# Configuración de caché para vistas
VIEW_CACHE_ENABLED=true
VIEW_CACHE_PATH=storage/framework/views
VIEW_CACHE_TTL=3600
VIEW_DEBUG=false

# ========================================
# CONFIGURACIÓN DE SESIONES AVANZADA
# ========================================
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
UPLOAD_MAX_FILESIZE=40M
POST_MAX_SIZE=40M
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300

# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================
# Para producción
DEVELOPMENT_MODE=false
DEBUG_BAR_ENABLED=false
TELESCOPE_ENABLED=false

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
# Email de notificaciones del sistema
SYSTEM_NOTIFICATION_EMAIL=admin@4gmovil.com

# ========================================
# CONFIGURACIÓN DE ALERTAS
# ========================================
# Umbral para alertas de stock bajo
STOCK_ALERT_THRESHOLD=10

# Email para alertas de stock
STOCK_ALERT_EMAIL=admin@4gmovil.com

# ========================================
# CONFIGURACIÓN DE REPORTES
# ========================================
# Directorio para reportes generados
REPORTS_PATH=storage/app/reports

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
# Directorio para backups
BACKUP_PATH=storage/app/backups

# ========================================
# CONFIGURACIÓN DE CACHE DE ASSETS
# ========================================
# Configuración para caché de assets estáticos
ASSET_CACHE_ENABLED=true
ASSET_CACHE_TTL=31536000

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Configuración de CORS
CORS_ALLOWED_ORIGINS=https://4gmovil.laravel-cloud.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Configuración de rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
# Habilitar monitoreo de rendimiento
PERFORMANCE_MONITORING=true

# Configuración de métricas
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# ========================================
# CONFIGURACIÓN ESPECÍFICA DE LARAVEL CLOUD
# ========================================
# Configuración de Laravel Cloud
LARAVEL_CLOUD_ENABLED=true
LARAVEL_CLOUD_PROJECT_NAME=4gmovil
LARAVEL_CLOUD_ENVIRONMENT=production

# ========================================
# CONFIGURACIÓN DE CACHÉ PARA LARAVEL CLOUD
# ========================================
# Configuración de caché específica para Laravel Cloud
CACHE_STORE=redis
CACHE_PREFIX=4gmovil_cache_
CACHE_CLEAR_ON_DEPLOY=true

# ========================================
# CONFIGURACIÓN DE REDIS PARA LARAVEL CLOUD
# ========================================
# Configuración de Redis específica para Laravel Cloud
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLIENT=predis
REDIS_PREFIX=4gmovil_

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS PARA LARAVEL CLOUD
# ========================================
# Configuración de base de datos específica para Laravel Cloud
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=4gmovil
DB_USERNAME=root
DB_PASSWORD=


# ========================================
# CONFIGURACIÓN DOCKER - 4GMovil
# Entorno: Docker con Redis
# ========================================

# Configuración de la aplicación
APP_NAME="4GMovil"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Configuración de mantenimiento
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Configuración de seguridad
BCRYPT_ROUNDS=12

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# BASE DE DATOS (DOCKER)
# ========================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=4gmovil
DB_USERNAME=laraveluser
DB_PASSWORD=laravelpass

# ========================================
# SESIONES
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================================
# CACHÉ Y REDIS (DOCKER)
# ========================================
# Usar Redis para caché en Docker
CACHE_DRIVER=redis
CACHE_PREFIX=4gmovil_cache_

# Redis configurado para Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# COLA DE TRABAJOS
# ========================================
QUEUE_CONNECTION=redis

# ========================================
# BROADCASTING
# ========================================
BROADCAST_CONNECTION=redis

# ========================================
# ALMACENAMIENTO
# ========================================
FILESYSTEM_DISK=local

# ========================================
# CORREO ELECTRÓNICO
# ========================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=4gmoviltest@gmail.com
MAIL_PASSWORD=szgtcvuixtdrhepg
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="4gmoviltest@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# STRIPE (PAGOS)
# ========================================
# Claves de prueba (desarrollo)
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=whsec

# ========================================
# GOOGLE OAUTH
# ========================================
# Para obtener estas credenciales:
# 1. Ve a https://console.developers.google.com/
# 2. Crea un nuevo proyecto o selecciona uno existente
# 3. Habilita la API de Google+ y Google OAuth2
# 4. Ve a "Credenciales" > "Crear credenciales" > "ID de cliente OAuth 2.0"
# 5. Configura las URIs de redirección autorizadas:
#    - http://localhost:8000/auth/callback/google (desarrollo)
#    - https://tu-dominio.com/auth/callback/google (producción)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# ========================================
# CONFIGURACIÓN DE INVENTARIO
# ========================================
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_ALERT_EMAIL=4gmoviltest@gmail.com

# ========================================
# AWS (OPCIONAL)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# VITE (FRONTEND)
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# CONFIGURACIÓN DE CACHÉ AVANZADA
# ========================================
# TTL del caché en segundos (1 hora)
CACHE_TTL=3600

# Configuración de caché para vistas
VIEW_CACHE_ENABLED=true
VIEW_CACHE_PATH=storage/framework/views
VIEW_CACHE_TTL=3600
VIEW_DEBUG=false

# ========================================
# CONFIGURACIÓN DE SESIONES AVANZADA
# ========================================
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
UPLOAD_MAX_FILESIZE=40M
POST_MAX_SIZE=40M
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Para desarrollo con Docker
DEVELOPMENT_MODE=true
DEBUG_BAR_ENABLED=true
TELESCOPE_ENABLED=true

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
# Email de notificaciones del sistema
SYSTEM_NOTIFICATION_EMAIL=4gmoviltest@gmail.com

# ========================================
# CONFIGURACIÓN DE ALERTAS
# ========================================
# Umbral para alertas de stock bajo
STOCK_ALERT_THRESHOLD=10

# Email para alertas de stock
STOCK_ALERT_EMAIL=4gmoviltest@gmail.com

# ========================================
# CONFIGURACIÓN DE REPORTES
# ========================================
# Directorio para reportes generados
REPORTS_PATH=storage/app/reports

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
# Directorio para backups
BACKUP_PATH=storage/app/backups

# ========================================
# CONFIGURACIÓN DE CACHE DE ASSETS
# ========================================
# Configuración para caché de assets estáticos
ASSET_CACHE_ENABLED=true
ASSET_CACHE_TTL=31536000

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Configuración de CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Configuración de rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
# Habilitar monitoreo de rendimiento
PERFORMANCE_MONITORING=true

# Configuración de métricas
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# ========================================
# CONFIGURACIÓN ESPECÍFICA DE DOCKER
# ========================================
# Configuración de Redis para Docker
REDIS_CLIENT=predis
REDIS_PREFIX=4gmovil_

# Configuración de MySQL para Docker
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=4gmovil
MYSQL_USER=laraveluser
MYSQL_PASSWORD=laravelpass

# ========================================
# CONFIGURACIÓN DE REDIS COMMANDER
# ========================================
# Configuración para Redis Commander (opcional)
REDIS_COMMANDER_HOST=redis
REDIS_COMMANDER_PORT=6379
REDIS_COMMANDER_HTTP_USER=admin
REDIS_COMMANDER_HTTP_PASSWORD=admin

# ========================================
# CONFIGURACIÓN DE DOCKER COMPOSE
# ========================================
# Variables para Docker Compose
COMPOSE_PROJECT_NAME=4gmovil
COMPOSE_FILE=docker-compose.yml

# ========================================
# CONFIGURACIÓN DE VOLÚMENES
# ========================================
# Configuración de volúmenes de Docker
DOCKER_VOLUME_PREFIX=4gmovil_
DOCKER_VOLUME_MYSQL=mysql_data
DOCKER_VOLUME_REDIS=redis_data

# ========================================
# CONFIGURACIÓN DE RED
# ========================================
# Configuración de red de Docker
DOCKER_NETWORK_NAME=4gmovil_network
DOCKER_NETWORK_DRIVER=bridge